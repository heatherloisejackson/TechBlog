<div class="container">
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Edit entry:</h3>
      <form class="form">
        <div class="control-group">
          <div class="form-group floating-label-form-group">
            <label for="entry-title">Title:</label>
            <input type="text" class="form-control" placeholder="Title" id="entry-title" name="entry-title"
              value={{entry.title}}>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label for="entry-content">Content:</label>
            <textarea class="form-control" placeholder="Content" rows="10" id="entry-content"
              name="entry-content">{{entry.content}}</textarea>
          </div>
        </div>
        <br>
        <button type="button" class="btn btn-primary" id="edit-entry-btn" data-id={{entry.id}}>Edit</button>
        <button type="button" class="btn btn-primary" id="delete-entry-btn"  data-id={{entry.id}}>Delete</button>
      </form>
    </div>
  </div>
</div>

<script src="../public/js/edit-delete-entry.js"></script>